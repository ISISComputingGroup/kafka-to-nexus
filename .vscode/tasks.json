{
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "mkdir -p _build && cd _build && conan install .. --build=missing && cmake .. && make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "UnitTests",
            "command": "cd _build && make UnitTests && source activate_run.sh && ./bin/UnitTests",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "IntegrationTests",
            "command": "docker stop integration-tests_kafka_1 integration-tests_zookeeper_1 ; source .venv/bin/activate && python -m pip install -r requirements.txt && source ../_build/activate_run.sh && python -m pytest -s . --writer-binary=../_build",
            "options": {
                "cwd": "${workspaceFolder}/integration-tests"
            },
            // "problemMatcher": [
            //     "$gcc",
            // ],
            "dependsOn": [
                "Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}